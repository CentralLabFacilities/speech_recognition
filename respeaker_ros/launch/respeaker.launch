<launch>

  <arg name="device" default="array2"/>

  <node name="respeaker_node" pkg="respeaker_ros" type="respeaker_node_$(arg device)"
	output="screen" clear_params="true" required="true"/>

  <node name="respeaker_tf" pkg="tf2_ros" type="static_transform_publisher"
        args="0 0 0 0 0 0 0 base_link respeaker_base"/>

</launch>

